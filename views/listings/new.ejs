<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2 mt-2">
    <br>
    <h3>Create a New Listing</h3>
    <!-- bootstrap classes -->
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <lable for="title" class="form-label"> Title </lable>
        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <div class="mb-3">        
        <lable for="description" class="form-label"> Description </lable>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Please enter a short description!
        </div>
      </div>

      <!-- <div class="mb-3">
        <lable for="image" class="form-label"> Image Link </lable>
        <input
          name="listing[image][url]"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"
        />
      </div> -->

      <div class="mb-3">
        <lable for="image" class="form-label"> Upload Listing Image </lable>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label"> Enter Price </lable>
          <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required/>
          <div class="invalid-feedback">
            Please enter a valid price!
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label"> Enter Country </lable>
          <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
          <div class="invalid-feedback">
            Please enter a valid country!
          </div>
        </div>
      </div>
      
      <div class="mb-3">
        <lable for="location" class="form-label"> Enter Location </lable>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Please enter a valid location!
        </div>
      </div>

      <button class="btn btn-dark mb-3 d-grid gap-2 col-4 mx-auto">Add</button>
    </form>
  </div>
</div>

